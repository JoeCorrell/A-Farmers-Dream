{
    "format_version": "1.20.0",
    "minecraft:block": {
        "description": {
            "identifier": "block:cabbage_crop_block",
            "properties": {
                "property:growth_stage": [
                    0, //Stage 0 =>
                    1, //Stage 1 =>
                    2, //Stage 2 =>
                    3 //Stage 3, harvesting =>
                ]
            },
            "menu_category": {
                "category": "nature"
            }
        },
        "permutations": [
            {
                //These permutations are for changing the geometry and texture based on the growth stage =>
                //property:growth_stage == 0 =>
                "condition": "query.block_property('property:growth_stage') == 0",
                "components": {
                    "minecraft:geometry": "geometry.cabbage_crop_block_stage_0",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "cabbage_crop_block_stage_0",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -3,
                            2,
                            -3
                        ],
                        "size": [
                            6,
                            4,
                            6
                        ]
                    }
                }
            },
            {
                //property:growth_stage == 1 =>
                "condition": "query.block_property('property:growth_stage') == 1",
                "components": {
                    "minecraft:geometry": "geometry.cabbage_crop_block_stage_1",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "cabbage_crop_block_stage_1",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -3,
                            2,
                            -3
                        ],
                        "size": [
                            6,
                            4,
                            6
                        ]
                    }
                }
            },
            {
                //property:growth_stage == 2 =>
                "condition": "query.block_property('property:growth_stage') == 2",
                "components": {
                    "minecraft:geometry": "geometry.cabbage_crop_block_stage_2",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "cabbage_crop_block_stage_2",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -3,
                            2,
                            -3
                        ],
                        "size": [
                            6,
                            4,
                            6
                        ]
                    }
                }
            },
            {
                //property:growth_stage == 3 =>
                "condition": "query.block_property('property:growth_stage') == 3",
                "components": {
                    "minecraft:geometry": "geometry.cabbage_crop_block_stage_3",
                    "minecraft:material_instances": {
                        "*": {
                            "texture": "cabbage_crop_block_stage_3",
                            "render_method": "alpha_test"
                        }
                    },
                    "minecraft:selection_box": {
                        "origin": [
                            -3,
                            2,
                            -3
                        ],
                        "size": [
                            6,
                            4,
                            6
                        ]
                    },
                    "minecraft:loot": "loot_tables/crop_block_loot/cabbage_crop_block_loot/cabbage_crop_block_stage_3.loot.json"
                }
            }
        ],
        "components": {
            "minecraft:geometry": "geometry.cabbage_crop_block_stage_0",
            "minecraft:random_ticking": {
                "on_tick": {
                    "event": "event:crop_growth_stage_tick"
                }
            },
            "minecraft:collision_box": {
                "origin": [
                    0,
                    0,
                    0
                ],
                "size": [
                    0,
                    0,
                    0
                ]
            },
            "minecraft:transformation": {
                "scale": [
                    1.5,
                    1.5,
                    1.5
                ]
            },
            "minecraft:placement_filter": {
                "conditions": [
                    {
                        "allowed_faces": [
                            "up"
                        ],
                        "block_filter": [
                            "farmland"
                            //"block:fertile_soil"
                        ]
                    }
                ]
            },
            "minecraft:on_interact": {
                "event": "event:crop_growth_stage_increase"
            },
            "minecraft:loot": "loot_tables/crop_block_loot/cabbage_crop_block_loot/cabbage_crop_block_stage_0.loot.json",
            "minecraft:light_dampening": 0
        },
        "events": {
            //Event for determing if the player used bone meal, and if so to increase property:growth_stage by 1 =>
            "event:crop_growth_stage_increase": {
                "sequence": [
                    {
                        "condition": "query.is_item_name_any('slot.weapon.mainhand','minecraft:bone_meal')",
                        "decrement_stack": {},
                        "set_block_property": {
                            "property:growth_stage": "q.block_property('property:growth_stage') == 3 ? 0 :q.block_property('property:growth_stage')+1"
                        },
                        "run_command": {
                            "command": [
                                "particle minecraft:crop_growth_emitter ~~~",
                                "playsound item.bone_meal.use @a ~~~"
                            ]
                        }
                    },
                    {
                        //This is for whether or not the block is the final stage, and will harevst it upon interaction =>
                        "condition": "q.block_property('property:growth_stage') == 3",
                        //Resets the property:growth_stage to 0 for a "replant" feature =>
                        "set_block_property": {
                            "property:growth_stage": 0
                        },
                        "spawn_loot": {
                            "table": "loot_tables/crop_block_loot/cabbage_crop_block_loot/cabbage_crop_block_stage_3.loot.json"
                        }
                    }
                ]
            },
            //Event for random tick to randomly increase property:growth_stage by 1 =>
            "event:crop_growth_stage_tick": {
                "set_block_property": {
                    "property:growth_stage": "(query.block_property('property:growth_stage')<3) ? query.block_property('property:growth_stage') + 1 : 3"
                }
            }
        }
    }
}