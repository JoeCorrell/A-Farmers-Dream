            "condition": "!q.is_item_name_any('slot.weapon.mainhand', 'minecraft:white_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:white_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:black_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:blue_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:brown_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:cyan_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:gray_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:green_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:light_blue_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:lime_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:magenta_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:orange_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:pink_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:purple_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:red_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:light_gray_dye') && !q.is_item_name_any('slot.weapon.mainhand', 'minecraft:yellow_dye') && !q.is_sneaking",
