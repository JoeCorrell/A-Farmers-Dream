{
  "namespace": "farming_containers",
  "backpack_leather_ui@backpack_leather_ui_common": {
    "type": "image",
    "texture": "textures/ui/backpack_leather_ui",
    "layer": 1
  },
  "drawer_red_ui@drawer_red_ui_common": {
    "type": "image",
    "texture": "textures/ui/drawer_red_ui",
    "layer": 1
  },
  "drawer_red_cell_image": {
    "type": "image",
    "texture": "textures/ui/drawer_red_ui_cell",
    "layer": 1
  },
  "drawer_red_grid": {
    "type": "grid",
    "size": [90, 54],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "grid_dimensions": [5, 3],
    "grid_item_template": "chest.chest_grid_item",
    "collection_name": "container_items"
  },
  "drawer_red_top_half": {
    "type": "panel",
    "$background_images": "drawer_red_cell_image",
    "size": ["100%", 100],
    "anchor_to": "top_left",
    "anchor_from": "top_left",
    "controls": [
      {
        "drawer_red_grid@chest.drawer_red_grid": {
          "offset": [42, 20]
        }
      }
    ]
  },
  "drawer_red_inventory@chest.inventory_contents": {
    "$grid_template": "chest.drawer_red_inventory_template"
  },
  "drawer_red_inventory_template@common.container_item": {
    "$item_collection_name": "inventory_items"
  },
  "drawer_red_hotbar@chest.hotbar_contents": {
    "$grid_template": "chest.drawer_red_hotbar_template"
  },
  "drawer_red_hotbar_template@common.container_item": {
    "$item_collection_name": "hotbar_items"
  },
  "drawer_red_root_panel@small_root_panel": {
    "$hotbar_contents": "chest.drawer_red_hotbar",
    "$inventory_contents": "chest.drawer_red_inventory",
    "$dialog_background": "chest.drawer_red_ui",
    "size": [175, 187],
    "$chest_panel": "chest.drawer_red_top_half"
  },
  "small_root_panel@common.root_panel": {
    "$chest_panel|default": "chest.small_chest_panel_top_half",
    "layer": 1,
    "controls": [
      {
        "common_panel@common.common_panel": {}
      },
      {
        "chest_panel": {
          "type": "panel",
          "layer": 5,
          "$inventory_contents|default": "common.inventory_panel_bottom_half_with_label",
          "$hotbar_contents|default": "common.hotbar_grid_template",
          "controls": [
            {
              "small_chest_panel_top_half@$chest_panel": {}
            },
            {
              "inventory_panel_bottom_half_with_label@$inventory_contents": {}
            },
            {
              "hotbar_grid@$hotbar_contents": {}
            },
            {
              "inventory_take_progress_icon_button@common.inventory_take_progress_icon_button": {}
            }
          ]
        }
      },
      {
        "inventory_selected_icon_button@common.inventory_selected_icon_button": {}
      },
      {
        "gamepad_cursor@common.gamepad_cursor_button": {}
      }
    ]
  },
  "inventory_contents@common.inventory_panel_bottom_half_with_label": {
    "controls": [
      {
        "inventory_panel": {
          "type": "panel",
          "size": [88, 83],
          "anchor_from": "bottom_middle",
          "anchor_to": "bottom_middle",
          "controls": [
            {
              "inventory_grid": {
                "type": "grid",
                "size": [162, 54],
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "offset": [0, -26],
                "grid_dimensions": [9, 3],
                "grid_item_template": "$grid_template",
                "collection_name": "inventory_items"
              }
            }
          ]
        }
      },
      {
        "inventory_label@common.section_heading_label": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [8, 3],
          "layer": 2,
          "color": [0.3, 0.3, 0.3],
          "text": "container.inventory"
        }
      }
    ]
  },
  "hotbar_contents@common.hotbar_grid_template": {
    "grid_item_template": "$grid_template"
  },
  "small_chest_panel": {
    "type": "panel",
    "controls": [
      {
        "container_gamepad_helpers@common.container_gamepad_helpers": {}
      },
      {
        "flying_item_renderer@common.flying_item_renderer": {
          "layer": 11
        }
      },
      {
        "selected_item_details_factory@common.selected_item_details_factory": {
          "control_name": "@chest.selected_item_details"
        }
      },
      {
        "item_lock_notification_factory@common.item_lock_notification_factory": {
          "control_name": "@common.item_lock_notification"
        }
      },
      {
        "root_panel@$root_panel": {}
      }
    ]
  },
  "small_chest_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": true,
    "close_on_player_hurt": "$close_on_player_hurt",
    "$root_panel|default": "chest.small_root_panel",
    "$container_size|default": 27,
    "variables": [
      {
        "requires": "($container_title = 'drawer_black')",
        "$root_panel": "chest.cabinent_black_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_brown')",
        "$root_panel": "chest.drawer_brown_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_blue')",
        "$root_panel": "chest.drawer_blue_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_cyan')",
        "$root_panel": "chest.drawer_cyan_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_gray')",
        "$root_panel": "chest.drawer_gray_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_light_blue')",
        "$root_panel": "chest.drawer_light_blue_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_light_gray')",
        "$root_panel": "chest.drawer_light_gray_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_lime')",
        "$root_panel": "chest.drawer_lime_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_magenta')",
        "$root_panel": "chest.drawer_magenta_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_orange')",
        "$root_panel": "chest.drawer_orange_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_purple')",
        "$root_panel": "chest.drawer_purple_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_pink')",
        "$root_panel": "chest.drawer_pink_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_red')",
        "$root_panel": "chest.drawer_red_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_white')",
        "$root_panel": "chest.drawer_white_root_panel",
        "$container_size": 12
      },
      {
        "requires": "($container_title = 'drawer_yellow')",
        "$root_panel": "chest.drawer_yellow_root_panel",
        "$container_size": 12
      },
      {
        "requires": "$desktop_screen",
        "$screen_content": "chest.small_chest_panel",
        "$screen_bg_content": "common.screen_background"
      },
      {
        "requires": "$pocket_screen",
        "$screen_content": "chest.small_chest_panel",
        "$screen_bg_content": "common.screen_background"
      }
    ]
  },
  "ender_chest_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": true,
    "close_on_player_hurt": "$close_on_player_hurt",
    "variables": [
      {
        "requires": "$desktop_screen",
        "$screen_content": "chest.small_root_panel",
        "$screen_bg_content": "common.screen_background"
      },
      {
        "requires": "$pocket_screen",
        "$screen_content": "pocket_containers.ender_chest_panel"
      }
    ]
  }
}
